                                    Dados = Dados + "<input type='checkbox' name='ckSubVariacao' value='" + split[0] + "' onclick='AtualizaBusca(888)'>&nbsp&nbsp&nbsp&nbsp"
                                }

                                document.getElementById("Subvariacao").innerHTML = Dados;
                            }
