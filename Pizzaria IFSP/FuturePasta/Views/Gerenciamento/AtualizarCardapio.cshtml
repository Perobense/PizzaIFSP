        $.ajax({
            url: '@Url.Action("AtualizaBusca", "Gerenciamento")',
            data: { Dados: BuscaNome, Tipo:TipoProduto, Status : Status, Variacao:Variacao,Tamanhos:Tamanhos, SubVariacao:SubVariacao },
            success: function (data) {
              
